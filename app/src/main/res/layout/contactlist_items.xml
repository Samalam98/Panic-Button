<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textview_android_contact_name"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:text="Name"
        android:textSize="22dp"></TextView>

    <TextView
        android:id="@+id/textview_android_contact_phoneNr"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textview_android_contact_name"
        android:layout_below="@+id/textview_android_contact_name"
        android:text="TelefonNr"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>